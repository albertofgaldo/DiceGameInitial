        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hasGanado" />

    <EditText
        android:id="@+id/textDado2"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:layout_marginBottom="347dp"
        android:layout_marginEnd="48dp"
        android:layout_marginTop="92dp"
        android:ems="10"
        android:hint="1"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textDado1"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/textDado1"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:layout_marginBottom="347dp"
        android:layout_marginEnd="144dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="92dp"
        android:ems="10"
        android:hint="1"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textDado2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hasGanado"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_marginEnd="142dp"
        android:layout_marginStart="143dp"
        android:layout_marginTop="48dp"
        android:textSize="24sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textDadoResultado" />
</android.support.constraint.ConstraintLayout>